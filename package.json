{
  "name": "react-open-source-grid",
  "private": false,
  "version": "1.3.1",
  "type": "module",
  "description": "A high-performance React DataGrid component with advanced features like virtual scrolling, infinite scrolling, tree data, market data mode, and more",
  "main": "./dist/assets/index.js",
  "types": "./dist/assets/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "react",
    "datagrid",
    "table",
    "data-grid",
    "virtual-scroll",
    "infinite-scroll",
    "tree-data",
    "market-data",
    "typescript"
  ],
  "author": "Bhushan Poojary",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhushanpoojary/react-open-source-datagrid.git"
  },
  "bugs": {
    "url": "https://github.com/bhushanpoojary/react-open-source-datagrid/issues"
  },
  "homepage": "https://bhushanpoojary.github.io/react-open-source-datagrid",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test": "npm run test:playwright && npm run test:cypress",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:report": "playwright show-report",
    "test:cypress": "start-server-and-test dev http://localhost:5173 cypress:run",
    "test:cypress:open": "start-server-and-test dev http://localhost:5173 cypress:open",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "test:component": "cypress run --component",
    "test:e2e": "start-server-and-test dev http://localhost:5173 cypress:run:e2e",
    "cypress:run:e2e": "cypress run --e2e",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "exceljs": "^4.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.48.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "cypress": "^13.16.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.7",
    "start-server-and-test": "^2.1.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint"
    ]
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
